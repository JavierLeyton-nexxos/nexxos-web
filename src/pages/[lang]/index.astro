---
import Layout from '../../layouts/Layout.astro'
import Navbar from '../../components/Navbar.astro'
import Hero from '../../components/Hero.astro'
import ValueGrid from '../../components/ValueGrid.astro'
import HardwareSpecs from '../../components/HardwareSpecs.astro'
import Fortress from '../../components/Fortress.astro'
import ActionFooter from '../../components/ActionFooter.astro'
import { languages } from '../../i18n/ui'

export function getStaticPaths() {
	return [{ params: { lang: 'en' } }, { params: { lang: 'pt-br' } }]
}

const { lang } = Astro.params

const structuredData = {
	'@context': 'https://schema.org',
	'@type': 'SoftwareApplication',
	name: 'Nexxos AI Hub',
	description: 'Sovereign hyperscale AI infrastructure for Latin America',
	applicationCategory: 'BusinessApplication',
	offers: {
		'@type': 'Offer',
		price: 'TBD',
		priceCurrency: 'USD',
		availability: 'https://schema.org/InStock',
	},
	areaServed: ['AR', 'BR', 'CL', 'CO', 'MX', 'UY'],
	featureList: [
		'NVIDIA Blackwell optimization',
		'98% renewable energy',
		'Zero water waste',
		'18-month deployment',
	],
}
---

<Layout
	title='nexxos AI Hub | Sovereign Hyperscale Infrastructure LATAM'
	structuredData={structuredData}
>
	<Navbar />

	<main>
		<Hero />
		<ValueGrid />
		<HardwareSpecs />
		<Fortress />
		<ActionFooter />
	</main>
</Layout>
